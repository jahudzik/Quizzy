<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="pl.jahu.quizzy.fragments.StatsFragment">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="left|top">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffd4ffdf"
                android:text="Correct:"
                android:id="@+id/correctCountLabel" android:padding="2dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#ffd4ffdf"
                android:text="X/X"
                android:id="@+id/correctCountValue" android:padding="2dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_weight="2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffd9d4"
                android:text="Incorrect:"
                android:id="@+id/wrongCountLabel" android:padding="2dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="#ffffd9d4"
                android:text="X"
                android:id="@+id/wrongCountValue" android:padding="2dp"/>
    </LinearLayout>
</FrameLayout>
